---
layout: default
---

<div class="course-lecture">
  <header>
    <p class="breadcrumb">
      <a href="/courses/">Courses</a> / 
      {% if page.course %}{{ page.course }}{% endif %}
    </p>
    <h1>{{ page.title }}</h1>
    <p class="date">{{ page.date | date: '%B %-d, %Y' }}</p>
  </header>

  <article class="lecture-content">
    {{ content }}
  </article>

  {%- if site.giscus.repo and page.giscus_comments -%}
    {% include giscus.liquid %}
  {%- endif -%}
</div>
